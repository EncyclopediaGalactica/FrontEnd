@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@if (ModuleAndScreenState?.Value.SelectedModule is not null)
{
    Logger.LogInformation("Module selection component: {Module}", ModuleAndScreenState?.Value.SelectedModule.UnifiedName);
    @switch (ModuleAndScreenState?.Value.SelectedModule.UnifiedName)
    {
        case "administration":
            Logger.LogInformation("administration switch");
            <EGAdministrationMainContent/>
            break;

        case "finance":
            <EGFinanceMainContent/>
            break;

        case "documents":
            <EGDocumentsMainContent/>
            break;

        case "starmap":
            <EGStarMapMainContent/>
            break;

        default:
            <EGDefaultMainContent/>
            break;
    }
}
