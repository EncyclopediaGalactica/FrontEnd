@using EncyclopediaGalactica.BusinessLogic.Contracts
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
<FluentGrid>
    <FluentGridItem>
        <FluentDataGrid ItemsProvider="GridItemsProvider"
                        Virtualize="true"
                        TGridItem="UserResult"
                        @ref="Grid">
            <PropertyColumn Title="Id" Property="@(item => item.Id)"/>
            <PropertyColumn Title="Username" Property="@(item => item.UserName)"/>
            <PropertyColumn Title="First name" Property="@(item => item.FirstName)"/>
            <PropertyColumn Title="Last name" Property="@(item => item.LastName)"/>
            <TemplateColumn Title="Actions" Align="Align.End">
                <FluentButton IconEnd="@(new Icons.Regular.Size16.Edit())"
                              OnClick="@(async e => await HandleEditClickAsync(e, context))">
                    Edit
                </FluentButton>
                <FluentButton IconEnd="@(new Icons.Filled.Size16.Delete())"
                              OnClick="@(e => HandleDeleteClick(e, context))">
                    Delete
                </FluentButton>
            </TemplateColumn>
        </FluentDataGrid>
    </FluentGridItem>
</FluentGrid>