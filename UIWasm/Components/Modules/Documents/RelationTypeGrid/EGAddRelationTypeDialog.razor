@using EncyclopediaGalactica.BusinessLogic.Contracts
@implements IDialogContentComponent<EncyclopediaGalactica.BusinessLogic.Contracts.RelationTypeResult>
<FluentDialogHeader>Add new Relation Type</FluentDialogHeader>
<FluentDialogBody>
    <FluentGrid>
        <FluentGridItem xxl="4">
            <FluentSelect TOption="DocumentResult"
                          Items="_documents"
                          OptionValue="@(item => item.Id.ToString())"
                          OptionText="@(item => item.Name)"
                          SelectedOption="SelectedLeftDocument">
            </FluentSelect>
        </FluentGridItem>
        <FluentGridItem xxl="4">
            <FluentSelect TOption="ApplicationResult"
                          Items="_applications"
                          OptionValue="@(item => item.Id.ToString())"
                          OptionText="@(item => item.Name)"
                          SelectedOption="SelectedApplication">
            </FluentSelect>
        </FluentGridItem>
        <FluentGridItem xxl="4">
            <FluentSelect TOption="DocumentResult"
                          Items="_documents"
                          OptionValue="@(item => item.Id.ToString())"
                          OptionText="@(item => item.Name)"
                          SelectedOption="SelectedRightDocument">
            </FluentSelect>
        </FluentGridItem>
    </FluentGrid>
</FluentDialogBody>